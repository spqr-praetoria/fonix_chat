<div class="card card-side border border-base-200">
  <div class="card-body">
    <h2 class="card-title">
      <span class="avatar flex size-6 shrink-0 items-center justify-center rounded-lg border border-gray-700 bg-gray-800 text-[0.625rem] font-medium text-gray-400 text-white">
        <%= message.user.email.first.upcase %>
      </span>
      <div class="flex justify-between w-full items-baseline">
        <span><%= message.user.username || message.user.email %></span>
        <span class="text-gray-500 text-xs"><%= DateTimePresenter.new(message.created_at).uk_formatted %></span>
      </div>
    </h2>
    <p><%= message.content %></p>
  </div>
</div>
