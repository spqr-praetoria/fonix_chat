<div class="flex flex-col items-center justify-center">
  <div class="card w-full max-w-md bg-base-100 ">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold text-center self-center mb-4">Sign in to your account</h2>
    
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "label" %>
          <div>
            <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
          </div>
        </div>
        <div>
          <div class="flex items-center justify-between">
            <%= f.label :password, class: "label" %>
            <div class="text-sm">
               <%= link_to "Forgot password?", new_user_password_path, class: "link link-primary" %>
            </div>
          </div>
          <% if @minimum_password_length %>
            <span class="text-sm text-base-content/70">(6 characters minimum)</span>
          <% end %>
          <div class="" data-controller="password-visibility">
            <div class="join w-full">
              <%= f.password_field :password, required: true, autocomplete: "current-password", class: "input input-bordered join-item w-full", data: { password_visibility_target: "input" }, spellcheck: "false" %>
            </div>
          </div>
        </div>
        <div>
          <%= f.submit "Sign in", class: "btn btn-primary w-full" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-control">
            <label class="label cursor-pointer">
              <%= f.check_box :remember_me, class: "checkbox" %>
              <span class="label-text ml-2">Remember me</span>
            </label>
          </div>
        <% end %>
      <% end %>

      <div class="divider"></div>

      <p class="text-center text-sm text-base-content/70">
        Not got an account?
        <%= link_to "Sign up", new_user_registration_path, class: "link link-primary" %>
      </p>

      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <p class="mt-4 text-center text-sm text-base-content/70">
          <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path, class: "link link-primary" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
