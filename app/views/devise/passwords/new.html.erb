<%= render "devise/shared/error_messages", resource: resource %>

<div class="flex flex-col items-center justify-center">
  <div class="card w-full max-w-md bg-base-100">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold text-center self-center mb-4">Forgot your password?</h2>
    
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "label" %>
          <div>
            <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
          </div>
        </div>
        
        <div>
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider"></div>

      <div class="text-center">
        <%= link_to "Back to sign in", new_user_session_path, class: "link link-primary" %>
      </div>
      
      <div class="mt-2 text-center">
        <%= link_to "Sign up for a new account", new_registration_path(resource_name), class: "link link-primary" %>
      </div>
    </div>
  </div>
</div>
